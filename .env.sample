# Database
DATABASE_HOST=db
DATABASE_PORT=5432
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=password

# Rails
RAILS_ENV=development
RAILS_MAX_THREADS=5

# JWT Configuration (RS256)
# RS256秘密鍵（本番環境ではAWS Secrets Manager等で管理）
# 生成コマンド: openssl genrsa -out jwt_private_key.pem 2048
JWT_PRIVATE_KEY="-----BEGIN RSA PRIVATE KEY-----\n...\n-----END RSA PRIVATE KEY-----"
JWT_ISSUER=coupon-api
JWT_AUDIENCE=coupon-api
JWT_KID=default-key-id

# その他の設定
# REDIS_URL=redis://localhost:6379/0
